---
const posts = await Astro.glob("../posts/*.mdx");
---

<h1>My Blog</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>

<style>
  h1 {
    text-align: center;
  }
  li {
    margin-bottom: 12px;
  }
  
</style>